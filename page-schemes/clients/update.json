{
  "required_modules": [],
  "required_permissions": ["clients_get", "clients_update"],
  "structure": [
    {
      "title": "Шапка",
      "type": "header",
      "size": 4,
      "settings": {
        "description": "Клиенты - Редактирование",
        "title": [
          "№ ",
          ":id",
          " ",
          ":last_name",
          " ",
          ":first_name",
          " ",
          ":patronymic"
        ]
      },
      "components": {
        "buttons": []
      }
    },
    {
      "title": "Табы",
      "type": "tabs",
      "size": 4,
      "settings": [
        {
          "title": "Основная информация",
          "body": [
            {
              "title": "Форма",
              "type": "form",
              "size": 4,
              "settings": {
                "object": "clients",
                "command": "update",
                "areas": [
                  {
                    "size": 2,
                    "blocks": [
                      {
                        "title": "Основное",
                        "fields": [
                          "last_name",
                          "first_name",
                          "patronymic",
                          "gender",
                          "birthday",
                          "is_blacklist",
                          "advertise_id"
                        ]
                      },
                      {
                        "title": "Контакты",
                        "fields": [
                          "phone",
                          "second_phone",
                          "email",
                          "address",
                          "geolocation",
                          "client_groups"
                        ]
                      }
                    ]
                  },
                  {
                    "size": 2,
                    "blocks": [
                      {
                        "title": "Документы",
                        "fields": [
                          "passport_series",
                          "passport_number",
                          "passport_issued",
                          "is_representative"
                        ]
                      },
                      {
                        "title": "Законный представитель",
                        "fields": [
                          "present_last_name",
                          "present_first_name",
                          "present_patronymic",
                          "present_passport_series",
                          "present_passport_number",
                          "present_passport_issued"
                        ]
                      }
                    ]
                  },
                  {
                    "size": 4,
                    "blocks": [
                      {
                        "title": "",
                        "fields": [
                          "comment"
                        ]
                      }
                    ]
                  }
                ]
              },
              "components": {
                "buttons": [
                  {
                    "type": "submit",
                    "settings": {
                      "title": "Сохранить",
                      "background": "dark",
                      "href": "clients"
                    }
                  },
                  {
                    "type": "modal",
                    "settings": {
                      "title": "Добавить задачу",
                      "background": "dark",
                      "icon": "",
                      "page": "tasks/add",
                      "context": {
                        "form": "clients",
                        "row_id": ":id"
                      }
                    }
                  },
                  {
                    "type": "print",
                    "settings": {
                      "title": "Договора",
                      "background": "dark",
                      "data": {
                        "is_edit": true,
                        "document_article": "services_contract",
                        "scheme_name": "clients"
                      }
                    }
                  },
                  {
                    "type": "print",
                    "required_permissions": [],
                    "settings": {
                      "title": "Акт вып. работ",
                      "background": "dark",
                      "data": {
                        "document_article": "act_work_complete",
                        "is_edit": true
                      }
                    }
                  }
                ]
              }
            }
          ]
        },
        {
          "title": "История посещений",
          "is_counter": true,
          "body": [
            {
              "title": "Виджет статистики",
              "type": "analytic_widgets",
              "size": 4,
              "settings": {
                "widgets_group": "visit_statistic",
                "filters": [
                  {
                    "property": "client_id",
                    "value": ":id"
                  }
                ]
              },
              "components": {
                "filters": [
                  {
                    "title": "Дата (от)",
                    "type": "date",
                    "required_permissions": [],
                    "required_modules": [],
                    "settings": {
                      "size": 2,
                      "is_search": false,
                      "recipient_property": "start_at"
                    }
                  },
                  {
                    "title": "Дата (до)",
                    "type": "date",
                    "required_permissions": [],
                    "required_modules": [],
                    "settings": {
                      "size": 2,
                      "is_search": false,
                      "recipient_property": "end_at"
                    }
                  }
                ]
              }
            },
            {
              "title": "Список",
              "type": "list",
              "size": 4,
              "settings": {
                "object": "history_visits",
                "link": false,
                "is_edit": false,
                "filters": [
                  {
                    "property": "clients_id",
                    "value": ":id"
                  }
                ],
                "linked_filter": "analytic_widgets_visit_statistic"
              }
            }
          ]
        },
        {
          "title": "История звонков",
          "is_counter": true,
          "body": [
            {
              "title": "История звонков",
              "type": "list",
              "size": 4,
              "settings": {
                "object": "callHistory",
                "filters": [
                  {
                    "property": "client_id",
                    "value": ":id"
                  }
                ]
              },
              "components": []
            }
          ]
        },
        {
          "title": "Задачи клиента",
          "body": [
            {
              "title": "Задачи клиента",
              "type": "list",
              "size": 4,
              "settings": {
                "object": "tasks",
                "filters": [
                  {
                    "property": "client_id",
                    "value": ":id"
                  }
                ]
              },
              "components": {
                "filters": [
                  {
                    "title": "Тема",
                    "type": "list",
                    "required_permissions": [],
                    "required_modules": [],
                    "settings": {
                      "is_search": false,
                      "recipient_property": "taskGroup_id",
                      "donor_object": "taskGroups",
                      "donor_property_title": "title",
                      "donor_property_value": "id"
                    }
                  },
                  {
                    "title": "Дата",
                    "type": "date",
                    "required_permissions": [],
                    "required_modules": [],
                    "settings": {
                      "is_search": false,
                      "recipient_property": "deadline"
                    }
                  },
                  {
                    "title": "Исполнитель",
                    "type": "list",
                    "required_permissions": [],
                    "required_modules": [],
                    "settings": {
                      "is_search": false,
                      "recipient_property": "performer_id",
                      "donor_object": "users",
                      "donor_property_title": "last_name",
                      "donor_property_value": "id",
                      "select": [ [ "short_fio", "last_name", "first_name", "patronymic" ] ],
                      "select_menu": [ [ "fio" ] ]
                    }
                  },
                  {
                    "title": "Автор",
                    "type": "list",
                    "required_permissions": [],
                    "required_modules": [],
                    "settings": {
                      "is_search": false,
                      "recipient_property": "author_id",
                      "donor_object": "users",
                      "donor_property_title": "last_name",
                      "donor_property_value": "id",
                      "select": [ [ "short_fio", "last_name", "first_name", "patronymic" ] ],
                      "select_menu": [ [ "fio" ] ]
                    }
                  },
                  {
                    "title": "Статус",
                    "type": "list",
                    "required_permissions": [],
                    "required_modules": [],
                    "settings": {
                      "is_search": false,
                      "recipient_property": "status",
                      "list": [
                        {
                          "title": "Поставлена",
                          "value": "set"
                        },
                        {
                          "title": "Завершена",
                          "value": "ended"
                        },
                        {
                          "title": "Просрочена",
                          "value": "overdue"
                        }
                      ]
                    }
                  }
                ],
                "buttons": [
                  {
                    "type": "modal",
                    "settings": {
                      "title": "Добавить задачу",
                      "background": "dark",
                      "icon": "",
                      "page": "tasks/add",
                      "context": {
                        "form": "clients",
                        "row_id": ":id"
                      }
                    }
                  }
                ]
              }
            }
          ]
        },
        {
          "title": "Статистика",
          "body": [
            {
              "title": "Виджет статистики",
              "type": "analytic_widgets",
              "size": 4,
              "settings": {
                "widgets_group": "client_statistic",
                "filters": [
                  {
                    "property": "client_id",
                    "value": ":id"
                  }
                ]
              }
            }
          ]
        },
        {
          "title": "Мед карта",
          "body": [
            {
              "title": "Мед карта",
              "type": "accordion",
              "size": 4,
              "settings": {
                "object": "visitReports",
                "property_title": "title",
                "property_body": "body",
                "filters": [
                  {
                    "property": "client_id",
                    "value": ":id"
                  }
                ]
              },
              "components": []
            }
          ]
        },
        {
          "title": "Договора",
          "body": [
            {
              "title": "Мед карта",
              "type": "accordion",
              "size": 4,
              "settings": {
                "object": "clientContracts",
                "property_title": "title",
                "property_body": "body",
                "filters": [
                  {
                    "property": "client_id",
                    "value": ":id"
                  }
                ]
              },
              "components": []
            }
          ]
        },
        {
          "title": "Бонусы",
          "body": [
            {
              "title": "Статистика бонусов",
              "type": "analytic_widgets",
              "size": 4,
              "settings": {
                "linked_filter": "list_bonusHistory",
                "widgets_group": "bonus_statistic",
                "filters": [
                  {
                    "property": "client_id",
                    "value": ":id"
                  }
                ]
              },
              "components": []
            },
            {
              "title": "Список операций",
              "type": "list",
              "size": 4,
              "settings": {
                "object": "bonusHistory",
                "link": false,
                "filters": [
                  {
                    "property": "client_id",
                    "value": ":id"
                  }
                ],
                "is_edit": false
              },
              "components": {
                "buttons": [
                  {
                    "type": "modal",
                    "settings": {
                      "title": "Изменить баланс",
                      "background": "dark",
                      "page": "clients/bonus",
                      "context": {
                        "form": "bonus",
                        "row_id": ":id"
                      },
                      "modal_size": "lg",
                      "refresh_after_submit": true
                    }
                  }
                ]
              }
            }
          ]
        },
        {
          "title": "Депозит",
          "body": [
            {
              "title": "Статистика депозита",
              "type": "analytic_widgets",
              "size": 4,
              "settings": {
                "widgets_group": "deposit_statistic",
                "linked_filter": "list_salesList",
                "filters": [
                  {
                    "property": "client_id",
                    "value": ":id"
                  }
                ]
              },
              "components": []
            },
            {
              "title": "Список операций",
              "type": "list",
              "size": 4,
              "settings": {
                "link": false,
                "object": "salesList",
                "filters": [
                  {
                    "property": "client_id",
                    "value": ":id"
                  },
                  {
                    "property": "action",
                    "value": "deposit"
                  }
                ],
                "is_edit": false
              },
              "components": {
                "buttons": [
                  {
                    "type": "modal",
                    "settings": {
                      "title": "Изменить баланс",
                      "background": "dark",
                      "page": "clients/deposit",
                      "context": {
                        "form": "deposit",
                        "row_id": ":id"
                      },
                      "modal_size": "lg"
                    }
                  }
                ]
              }
            }
          ]
        },
        {
          "title": "Логи",
          "body": [
            {
              "title": "Логи",
              "type": "logs",
              "size": 4,
              "settings": {
                "object": "logs",
                "filters": [
                  {
                    "property": "clients_id",
                    "value": ":id"
                  }
                ]
              },
              "components": {
                "filters": [
                  {
                    "title": "Дата",
                    "type": "date",
                    "required_permissions": [],
                    "required_modules": [],
                    "settings": {
                      "recipient_property": "created_at"
                    }
                  },
                  {
                    "title": "Филиал",
                    "type": "list",
                    "required_permissions": [],
                    "required_modules": [],
                    "settings": {
                      "is_search": false,
                      "recipient_property": "store_id",
                      "donor_object": "stores",
                      "donor_property_title": "title",
                      "donor_property_value": "id"
                    }
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
